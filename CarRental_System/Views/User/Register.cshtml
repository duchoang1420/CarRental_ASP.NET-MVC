
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/shared/_LayoutCarRental.cshtml";
}

<table align="center">
    <h2 style="text-align:center">Register</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Your name:</td>
            <td>@Html.TextBox("Name")</td>
            @ViewData["error1"]
        </tr>
        <tr style="height:40px">
            <td>Your user</td>
            <td>
                @Html.TextBox("ID")
                @ViewData["error2"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Password:</td>
            <td>
                @Html.Password("PassWords")
                @ViewData["error3"]
            </td>
        </tr>
        <tr style="height:40px">
            <td> Email:</td>
            <td>
                @Html.TextBox("Email")
                @ViewData["error4"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Address:</td>
            <td>
                @Html.TextBox("Addressed")
                @ViewData["error5"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Phone:</td>
            <td>
                @Html.TextBox("Phonenumber")
                @ViewData["error6"]
            </td>
        </tr>
        <tr style="height:40px">
            <td> Date of Birth:</td>
            <td>
                <input type="date" name="Dateofbirth" />
            </td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td>
                <input type="submit" value="Register" />
            </td>
        </tr>
    }

</table>


