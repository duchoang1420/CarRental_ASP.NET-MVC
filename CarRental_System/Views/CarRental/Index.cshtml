@using CarRental_System.Models
    @using PagedList.Mvc;
    @model PagedList.PagedList<CAR>
    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/shared/_LayoutCarRental.cshtml";
    }

    <h3 style="text-align:center;color:red">All of cars</h3>
    <div class="row">
        @foreach (var CAR in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100">
                    <a href="@Url.Action("Details","CarRental", new { id=CAR.CarID})">
                        <img alt="@CAR.CarName" src="~/images/@CAR.Picture" />
                    </a>
                    <div class="card-body">
                        <h4 class="card-title">
                            <a href="@Url.Action("Details","CarRental", new { id=CAR.CarID})">
                                @CAR.CarName
                            </a>
                        </h4>
                        <h5>@CAR.CostPerDay</h5>
                    </div>
                    <div class="card-footer">
                        <small>&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                    </div>
                </div>
            </div>


        }
    </div>
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
    <div class="PageMenu">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
    </div>
    <style>
        .PageMenu li {
            display: inline;
        }
    </style>
    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
